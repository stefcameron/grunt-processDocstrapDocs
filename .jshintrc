/**
 * Global jsHint option settings (assumes Node).
 * @see http://www.jshint.com/docs/options/
 */

{
   // Enforced options, producing *more* warnings
   "camelcase": true,
   "curly": true,
   "eqeqeq": true,
   "forin": true,
   "immed": true,
   "indent": 2,
   "latedef": true,
   "newcap": true,
   "noarg": true,
   "quotmark": "single",
   "undef": true,
   "unused": "vars",
   "strict": true,
   "trailing": true,

   // Relaxed options, producing *less* warnings
   "expr": true,
   "eqnull": true,
   "loopfunc": true,
   "sub": true,
   "supernew": true,

   // Environment options
   "node": true
}
